<div class="row mb-5">
  <div class="col-lg-8 mx-auto">
    <div class="bg-white p-5 rounded shadow">
      <!-- Custom rounded repositories bars with input group -->
      <form method="post" action="/repositories/search" class="search-repo-form" data-remote="true" data-type="script">
        <div class="p-1 bg-light rounded rounded-pill shadow-sm mb-4">
          <div class="input-group">
            <input type="search" name="search_term" placeholder="Search for github public repositories." aria-describedby="button-addon1" class="form-control border-0 bg-light">
            <div class="input-group-append">
              <button id="button-addon1" type="submit" class="btn btn-link text-primary"><i class="fa fa-search"></i></button>
            </div>
          </div>
        </div>
      </form>
      <!-- End -->
    </div>
  </div>
</div>

<div id="show-search-result">
</div>

